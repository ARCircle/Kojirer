  "paths": {
    "/api/dons/status/": {
      "get": {
        "summary": "",
        "description": "",
        "parameters": [
          {
            "name": "status",
            "in": "path",
            "required": true,
            "schema": {
              "type": "number"
            },
            "description": "調理状態"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "number",
              "default": "10"
            },
            "description": "取得件数上限"
          }
        ],
        "operationId": "",
        "responses": {
          "200": {
            "description": "注文の一覧を正常に取得しました。",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "./components/Order.json#/Order"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/order": {
      "post" : {
        "summary": "新規注文を追加する",
        "description": "新規注文を含むリクエストに対して，DBにその内容を保存し，作成した内容をレスポンスする",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./components/OrderCreateRequest.json#/Order"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "注文の追加が成功した",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./components/OrderCreateResponse.json#/Order"
                }
              }
            }
          },
          "400": {
            "description": "リクエストが不正",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
