{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "noImplicitAny": false,

    /* Language and Environment */
    "target": "ES2020",

    /* Modules */
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "Node16",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*", "./built/*"]
    },
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "./built",
    "declaration": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
