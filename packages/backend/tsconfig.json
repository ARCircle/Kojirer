{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "noImplicitAny": false,

    /* Language and Environment */
    "target": "ES2020",

    /* Modules */
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "Node16",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*", "./dist/*"]
    },
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "./built",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": false,

    /* Type Checking */
    "strict": false,
    "noImplicitAny": false,
    "noEmitOnError": false,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "built", "vitest.config.ts", "**/*.test.ts", "**/*.spec.ts"]
}
