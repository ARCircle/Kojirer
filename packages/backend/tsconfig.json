{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "ES2020",
    
    /* Modules */
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "Node16",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*", "./dist/*"]
    },
    "resolveJsonModule": true,
    
    /* Emit */
    "outDir": "./built",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
